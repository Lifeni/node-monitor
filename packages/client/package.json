{
  "name": "client",
  "version": "0.1.0",
  "description": "负责收集系统信息的客户端",
  "main": "client.ts",
  "types": "index.d.ts",
  "author": "LFN <liangfengning@foxmail.com>",
  "license": "MIT",
  "bin": "./dist/bundle/client.js",
  "scripts": {
    "start": "ts-node --files ./client.ts",
    "dev": "nodemon --exec \"ts-node --files ./client.ts\"",
    "build": "esbuild ./client.ts --bundle --platform=node --outfile=./dist/bundle/client.js --minify",
    "build:docker": "npm run build && docker build -t collector-client .",
    "build:linux": "npm run build && pkg .",
    "check": "tsc --noEmit"
  },
  "pkg": {
    "scripts": "./dist/bundle/client.js",
    "targets": [
      "node16-linux"
    ],
    "outputPath": "./dist/app"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "socket.io-client": "^4.2.0",
    "systeminformation": "^5.9.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.175",
    "@types/uuid": "^8.3.1"
  }
}
