{
  "name": "client",
  "version": "1.0.0",
  "description": "负责收集系统信息的客户端。",
  "main": "app.ts",
  "author": "LFN <liangfengning@foxmail.com>",
  "license": "MIT",
  "bin": "./dist/bundle/client.js",
  "scripts": {
    "start": "ts-node ./app.ts",
    "dev": "nodemon ./app.ts",
    "build": "esbuild ./app.ts --bundle --platform=node --outfile=./dist/bundle/client.js --minify",
    "build:linux": "npm run build && pkg ."
  },
  "pkg": {
    "scripts": "./dist/bundle/client.js",
    "targets": [
      "node16-linux"
    ],
    "outputPath": "./dist/app"
  },
  "dependencies": {
    "socket.io-client": "^4.2.0",
    "systeminformation": "^5.9.7"
  },
  "devDependencies": {
    "esbuild": "^0.13.4",
    "nodemon": "^2.0.13",
    "pkg": "^5.3.3",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
