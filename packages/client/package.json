{
  "name": "client",
  "version": "0.2.1",
  "description": "负责收集系统信息的客户端",
  "main": "client.ts",
  "types": "types.d.ts",
  "author": "LFN <liangfengning@foxmail.com>",
  "license": "MIT",
  "bin": "./dist/bundle/client.js",
  "scripts": {
    "start": "ts-node --files ./client.ts",
    "dev": "nodemon --ext \"ts\" --exec \"ts-node --files ./server.ts\"",
    "build": "esbuild ./client.ts --bundle --platform=node --outfile=./dist/bundle/client.js --minify",
    "build:docker": "npm run build && docker build -t client .",
    "build:pkg": "npm run build && pkg .",
    "check": "tsc --noEmit"
  },
  "pkg": {
    "scripts": "./dist/bundle/client.js",
    "outputPath": "./dist/app"
  },
  "dependencies": {
    "socket.io-client": "^4.4.0",
    "systeminformation": "^5.9.17",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.0",
    "@types/uuid": "^8.3.3",
    "esbuild": "^0.14.5",
    "nodemon": "^2.0.15",
    "pkg": "^5.5.1",
    "ts-node": "^10.4.0"
  }
}
