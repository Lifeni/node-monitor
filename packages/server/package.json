{
  "name": "server",
  "version": "0.1.0",
  "description": "负责将不同客户端的数据收集并存入数据库的服务端",
  "main": "server.ts",
  "types": "types.d.ts",
  "author": "LFN <liangfengning@foxmail.com>",
  "license": "MIT",
  "bin": "./dist/bundle/server.js",
  "scripts": {
    "start": "ts-node --files ./server.ts",
    "dev": "nodemon --exec \"ts-node --files ./server.ts\"",
    "build": "esbuild ./server.ts --bundle --platform=node --outfile=./dist/bundle/server.js --minify",
    "build:docker": "npm run build && docker build -t server .",
    "build:linux": "npm run build && pkg .",
    "check": "tsc --noEmit",
    "prisma:generate": "pnpx prisma generate"
  },
  "pkg": {
    "scripts": "./dist/bundle/server.js",
    "targets": [
      "node16-linux"
    ],
    "outputPath": "./dist/app"
  },
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "h3": "^0.3.1",
    "socket.io": "^4.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.13.7",
    "nodemon": "^2.0.13",
    "pkg": "^5.3.3",
    "prisma": "^3.2.1",
    "ts-node": "^10.3.0"
  }
}
